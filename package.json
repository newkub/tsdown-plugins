{
  "name": "tsdown-plugins",
  "version": "0.1.0",
  "description": "A collection of TSDown plugins for bundling and exporting config files",
  "type": "module",
  "private": true,
  "workspaces": [
    "plugins/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "turbo format",
    "release": "turbo release",
    "clean": "turbo clean && rm -rf node_modules",
    "install:all": "bun install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/bun": "^1.2.23",
    "@types/node": "24.6.2",
    "release-it": "^19.0.5",
    "tsdown": "^0.15.6",
    "turbo": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "bun@1.2.0",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.2.0"
  }
}