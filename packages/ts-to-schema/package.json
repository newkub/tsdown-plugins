{
	"name": "ts-to-schema",
	"type": "module",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "tsdown --config-loader unconfig",
		"dev": "bun run src/index.ts",
		"lint": "bunx tsc --noEmit && biome lint --write",
		"format": "biome format --write .",
		"release": "release-it",
		"test": "vitest"
	},
	"devDependencies": {
		"@types/node": "^24.10.0",
		"rolldown": "latest",
		"tsdown": "latest",
		"vitest": "latest"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"dependencies": {
		"typescript": "^5.7.2"
	}
}
